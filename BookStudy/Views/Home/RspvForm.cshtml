@model BookStudy.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>rspvForm</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSPV</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RspvForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="name">Your name:</label>
                    <input class="form-control" asp-for="name"/>
                </div>
                <div class="form-group">
                    <label asp-for="email">Email:</label>
                    <input class="form-control" asp-for="email" />
                </div>
                <div class="form-group">
                    <label asp-for="phone">Phone:</label>
                    <input class="form-control" asp-for="phone" />
                </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select class="form-control" asp-for="willAttend">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, i'll be there</option>
                        <option value="false">Sorry, I can't</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit RSPV
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>